<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
</head>

<body>
    <button>
        <a href="http://localhost:8080/api/products">inicio</a>
    </button>
    {{#if carts}}
    <div>
        <h1>Carrito y pedidos</h1>
        <div class="contentCarts">
            {{#each carts}}
            <div class="contentPedido">
                <h2>Pedido N°: </h2>
                <p>
                    id:
                    <a href="http://localhost:8080/api/carts/{{this._id}}">{{this._id}}</a>
                </p>
                <div class="divBtnUse">
                    <button class="btnUse" cart-id="{{this._id}}">Usar</button>
                    <button class="btnDeleteCart" cart-id="{{this._id}}">X</button>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="btnNC">
            <button id="btnNewCart">Nuevo pedido</button>
        </div>
    </div>
    {{/if}}


    {{#if cart}}
    <button><a href="http://localhost:8080/api/carts">Volver</a></button>
    <h1 id="nPedido" pedido-id="{{cartID}}">Pedido N° {{cartID}}</h1>
    <div class="spanEmptyCart"> 
        <button id="emptyCart"> Vaciar carrito</button>
    </div>
    <div class="contentCarts">
        {{#each cart.products}}
        <div>
            <h2>Producto: {{this.product.name}}</h2>
            <p>id: {{this.product._id}}</p>
            <p> Precio: {{this.product.price}}</p>
            <p>cantidad: {{this.quantity}}</p>
            <button class="btnDeleteProd" product-id="{{this.product._id}}">X</button>
        </div>
        {{/each}}
    </div>
    {{/if}}
</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script type="module" src="/js/Home&Carts.js"></script>
<script type="module" src="/js/cart.js"></script>


</html>